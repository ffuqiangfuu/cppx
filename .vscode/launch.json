{
  "version": "0.2.0",
  "configurations": [
      {
          "name": "Debug My C++",
          "type": "cppdbg",
          "request": "launch",
          "program": "${fileDirname}\\${fileBasenameNoExtension}.exe",
          "args": [],
          "stopAtEntry": false,
          "cwd": "${fileDirname}",
          "environment": [
              {
                  "name": "PATH",
                  "value": "D:\\DevelopTool\\msys64\\ucrt64\\bin;${env:PATH}"
              }
          ],
          "externalConsole": false,
          "MIMode": "gdb",
          "miDebuggerPath": "D:\\DevelopTool\\msys64\\ucrt64\\bin\\gdb.exe",
          "preLaunchTask": "Run My C++",
          "setupCommands": [
              {
                  "description": "Enable pretty-printing for gdb",
                  "text": "-enable-pretty-printing",
                  "ignoreFailures": true
              }
          ]
      }
  ]
}